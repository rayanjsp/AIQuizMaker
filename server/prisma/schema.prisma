// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- 1. UTILISATEUR ---
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  username  String?
  createdAt DateTime @default(now())

  // Relations : Son historique
  quizzes   Quiz[]   // Tous les quiz qu'il a générés (Ton historique est ici)
  results   Result[] // Tous ses scores de jeu
}

// --- 2. LE QUIZ ---
model Quiz {
  id          Int      @id @default(autoincrement())
  title       String
  topic       String   // Le sujet demandé à DeepSeek
  difficulty  String
  createdAt   DateTime @default(now())

  // Lien avec l'utilisateur
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  // Contenu du quiz
  questions   Question[]
  results     Result[]
}

// --- 3. LES QUESTIONS ---
model Question {
  id          Int      @id @default(autoincrement())
  text        String   @db.Text
  explanation String?  @db.Text // Explication générée par DeepSeek pour la correction

  quizId      Int
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  options     Option[]
}

// --- 4. LES RÉPONSES ---
model Option {
  id         Int      @id @default(autoincrement())
  text       String   @db.Text
  isCorrect  Boolean  @default(false)

  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

// --- 5. LES SCORES ---
model Result {
  id             Int      @id @default(autoincrement())
  score          Int
  totalQuestions Int
  completedAt    DateTime @default(now())

  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  quizId         Int
  quiz           Quiz     @relation(fields: [quizId], references: [id])
}